<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	<bean id="connectionManager"
		class="org.apache.http.impl.conn.PoolingHttpClientConnectionManager"
		destroy-method="close">
		<property name="maxTotal" value="${http.maxTotal}" />
		<property name="defaultMaxPerRoute" value="${http.maxPerRoute}" />
	</bean>
	<bean id="clientBuilder" class="org.apache.http.impl.client.HttpClientBuilder">
		<property name="connectionManager" ref="connectionManager" />
	</bean>
	<!-- httpClient为线程安全的，可以使用单例  -->
	<bean class="org.apache.http.impl.client.CloseableHttpClient"
		factory-bean="clientBuilder" factory-method="build" />

	<bean id="requestConfigBuilder" class="org.apache.http.client.config.RequestConfig.Builder">
		<property name="connectTimeout" value="${http.connectTimeout}"></property>
		<property name="connectionRequestTimeout" value="${http.requestTimeout}"></property>
		<property name="socketTimeout" value="${http.socketTimeout}"></property>
	</bean>
	<bean class="org.apache.http.client.config.RequestConfig"
		factory-bean="requestConfigBuilder" factory-method="build" />
</beans>